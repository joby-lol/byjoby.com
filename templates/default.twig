<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#C42F1E">
{% block html_head %}
    <title>{{page_title}} :: {{site_name}}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.2/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/hs/hs-typography.css">
    <link rel="stylesheet" href="/css/hs/hs-menus.css">
    <link rel="stylesheet" href="/css/hs/hs-fa-linkicons.css">
    <link rel="stylesheet" href="/css/hs/hs-layout-1col.css">
    <link rel="stylesheet" href="/css/main.css">
{% endblock %}

<script type="text/javascript">
  var _paq = _paq || [];
  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
    var u="//piwik.byjoby.net/";
    _paq.push(['setTrackerUrl', u+'piwik.php']);
    _paq.push(['setSiteId', '1']);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
    g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
  })();
</script>
</head>
<body>

{% block banner %}
    <header role="banner">
        <h1><a href="/">*joby_elliott</a></h1>
    </header>
{% endblock %}

{% block navigation %}
    <nav role="navigation">
        <div role="menubar">
            <a role="menuitem" href="/">Home</a>
            <a role="menuitem" href="/long/">Long Form</a>
            <a role="menuitem" href="/relics/">Relics</a>
            <a role="menuitem" href="/cv/">CV</a>
        </div>
    </nav>
{% endblock %}

{% block main %}
    <main role="main">
        {{page_body|raw}}
    </main>
{% endblock %}

{% block footer %}
    <footer role="contentinfo">
        &copy; Joby Elliott
    </footer>
{% endblock %}

</body>
</html>
